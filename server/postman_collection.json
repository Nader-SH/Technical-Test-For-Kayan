{
  "info": {
    "name": "Healthcare Backend API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "API collection for Healthcare Backend"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Sign Up",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"full_name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"patient\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/signup",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "signup"]
            }
          }
        },
        {
          "name": "Login (Doctor)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', jsonData.data.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', jsonData.data.refreshToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"doctor@example.com\",\n  \"password\": \"doctor123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Login (Patient)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', jsonData.data.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', jsonData.data.refreshToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"patient@example.com\",\n  \"password\": \"patient123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Login (Finance)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', jsonData.data.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', jsonData.data.refreshToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"finance@example.com\",\n  \"password\": \"finance123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "refresh"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Patient",
      "item": [
        {
          "name": "Create Appointment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"doctor_id\": \"<doctor-uuid>\",\n  \"scheduled_time\": \"2024-12-25T10:00:00Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/patients/:patientId/appointments",
              "host": ["{{baseUrl}}"],
              "path": ["patients", ":patientId", "appointments"],
              "variable": [
                {
                  "key": "patientId",
                  "value": "<patient-uuid>"
                }
              ]
            }
          }
        },
        {
          "name": "Get Patient Appointments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/patients/:patientId/appointments",
              "host": ["{{baseUrl}}"],
              "path": ["patients", ":patientId", "appointments"],
              "variable": [
                {
                  "key": "patientId",
                  "value": "<patient-uuid>"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Doctor",
      "item": [
        {
          "name": "Get Doctor Appointments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/doctors/:doctorId/appointments",
              "host": ["{{baseUrl}}"],
              "path": ["doctors", ":doctorId", "appointments"],
              "variable": [
                {
                  "key": "doctorId",
                  "value": "<doctor-uuid>"
                }
              ]
            }
          }
        },
        {
          "name": "Start Appointment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/appointments/:id/start",
              "host": ["{{baseUrl}}"],
              "path": ["appointments", ":id", "start"],
              "variable": [
                {
                  "key": "id",
                  "value": "<appointment-uuid>"
                }
              ]
            }
          }
        },
        {
          "name": "Finish Appointment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/appointments/:id/finish",
              "host": ["{{baseUrl}}"],
              "path": ["appointments", ":id", "finish"],
              "variable": [
                {
                  "key": "id",
                  "value": "<appointment-uuid>"
                }
              ]
            }
          }
        },
        {
          "name": "Add Treatment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"X-Ray\",\n  \"cost\": 150.00\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/appointments/:id/treatments",
              "host": ["{{baseUrl}}"],
              "path": ["appointments", ":id", "treatments"],
              "variable": [
                {
                  "key": "id",
                  "value": "<appointment-uuid>"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Treatment",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/appointments/:id/treatments/:treatmentId",
              "host": ["{{baseUrl}}"],
              "path": ["appointments", ":id", "treatments", ":treatmentId"],
              "variable": [
                {
                  "key": "id",
                  "value": "<appointment-uuid>"
                },
                {
                  "key": "treatmentId",
                  "value": "<treatment-uuid>"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Finance",
      "item": [
        {
          "name": "Search Appointments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/finance/appointments?doctor=Smith&patient=Doe&status=completed&from=2024-01-01&to=2024-12-31&limit=20&page=1",
              "host": ["{{baseUrl}}"],
              "path": ["finance", "appointments"],
              "query": [
                {
                  "key": "doctor",
                  "value": "Smith",
                  "disabled": true
                },
                {
                  "key": "patient",
                  "value": "Doe",
                  "disabled": true
                },
                {
                  "key": "status",
                  "value": "completed",
                  "disabled": true
                },
                {
                  "key": "from",
                  "value": "2024-01-01",
                  "disabled": true
                },
                {
                  "key": "to",
                  "value": "2024-12-31",
                  "disabled": true
                },
                {
                  "key": "limit",
                  "value": "20",
                  "disabled": true
                },
                {
                  "key": "page",
                  "value": "1",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Review Appointment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"approved\": true,\n  \"notes\": \"Approved for payment\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/finance/appointments/:id/review",
              "host": ["{{baseUrl}}"],
              "path": ["finance", "appointments", ":id", "review"],
              "variable": [
                {
                  "key": "id",
                  "value": "<appointment-uuid>"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Metrics",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/metrics",
